<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DescricaoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_game_image"
            android:layout_width="match_parent"
            android:src="@drawable/splash_firebase"
            android:scaleType="centerCrop"
            android:layout_height="250dp"/>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_descricao_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ToolbarColoredBackArrow"
            app:navigationIcon="@drawable/ic_arrow"
            app:popupTheme="@style/Apptheme" />

        <androidx.cardview.widget.CardView
            android:id="@+id/button_add_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="200dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="end"
            android:backgroundTint="@color/red"
            app:cardCornerRadius="360dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_edit_24" />

        </androidx.cardview.widget.CardView>

    </FrameLayout>

        <TextView
            android:id="@+id/tv_name_game_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="Example"/>

        <TextView
            android:id="@+id/tv_year_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:layout_marginHorizontal="15dp"
            android:textSize="15dp"
            android:text="Example"/>

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Example"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/roboto"
            android:textSize="15dp"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</ScrollView>